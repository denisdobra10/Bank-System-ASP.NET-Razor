@page
@model BankSystem.Pages.Login.DeleteModel
@using BankSystem.Models

@{
    ViewData["Title"] = "Delete";
}

@if(Account.LoggedInAccount.Id == Account.AdministratorID)
{
    
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.SecretQuestion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.SecretQuestion)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Account.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

}
else
{
    <p>PERMISSION DENIED</p>
}
