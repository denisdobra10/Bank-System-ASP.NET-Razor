@page
@model BankSystem.Pages.Admin.DepositsModel
@using BankSystem.Models

@{
    ViewData["Title"] = "Deposits";
}

@if (Account.LoggedInAccount != null && Account.LoggedInAccount.Id == Account.AdministratorID)
{
<h1>Deposits</h1>
<h1>Total deposits: @Model.Deposit.Count</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deposit[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deposit[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deposit[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Deposit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

        </tr>
}
    </tbody>
</table>

}
else
{
    <p>PERMISSION DENIED</p>
}
